<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="projectModel"
            type="com.example.betatest.data.storage.room.entity.ProjectModel" />
        <variable
            name="listener"
            type="com.example.betatest.OnClickItemInterface" />
        <variable
            name="bitmap"
            type="com.example.betatest.BitmapTypeConverter"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgLogorifm"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/view"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                />

            <View
                android:id="@+id/view"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#CE3335" />

            <View
                android:id="@+id/view2"
                android:layout_alignParentTop="true"
                android:layout_width="120dp"


                android:layout_height="20dp"
                android:background="#CE3335" />
            <TextView
                android:id="@+id/titleFirebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="111dp"
                android:layout_toEndOf="@+id/view"
                android:fontFamily="@font/eft"

                android:textColor="#CE3335"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateFirebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentEnd="true"

                android:layout_alignParentBottom="true"
                android:fontFamily="@font/eft"
                android:textColor="#CE3335"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/watcherFirebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/titleFirebase"
                android:layout_marginEnd="10dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/eft"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_eye"
                app:drawableTint="#CE3335" />

            <ImageView
                android:id="@+id/imgplus"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/plus"

                app:tint="#CE3335" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>