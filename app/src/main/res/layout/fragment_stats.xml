<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="5sp">


    <TextView
        android:layout_marginTop="10sp"
        android:id="@+id/textViewRegistr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="51sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:text="Статистика" />



    <TextView
        android:layout_marginTop="10sp"
        android:id="@+id/textViewRegistrfix"
        android:layout_below="@+id/textViewRegistr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="Мероприятий просм.:" />


    <TextView
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:id="@+id/textViewRegistr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="Меропритий создано:"
        android:layout_below="@+id/textViewRegistrfix"
        />


    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/textViewRegistr"
        android:layout_toRightOf="@+id/textViewRegistrfix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:textSize="24sp"
        android:layout_marginLeft="5sp"
        android:textColor="@color/black"
        android:text="TextView" />



    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textViewRegistr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:textSize="24sp"
        android:layout_marginLeft="5sp"
        android:textColor="@color/black"
        android:text="TextView" />








</RelativeLayout>