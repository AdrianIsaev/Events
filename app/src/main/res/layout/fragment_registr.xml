<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    tools:context=".presentation.fragments.vhod1">
        <TextView
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_below="@+id/textViewRegistr4"
            android:id="@+id/textViewRegistr5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginLeft="5sp"
            android:fontFamily="@font/eft"
            android:textColor="@color/black"
            android:text="Введите ваш пароль" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_alignParentTop="true"


            android:layout_marginStart="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginBottom="-5dp"
            android:background="#CE3335"/>
        <ImageButton
            android:id="@+id/joniks"
            android:layout_marginTop="3sp"
            android:layout_width="50dp"
            android:layout_marginLeft="3sp"
            android:layout_height="50dp"
            android:backgroundTint="@color/jove"
            android:rotation="270"
            android:src="@drawable/arrow_up_box"/>
        <TextView
            android:fontFamily="@font/eft"
            android:layout_marginTop="45sp"
            android:id="@+id/textViewRegistr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="51sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="Регистрация" />

        <EditText
            android:id="@+id/textViewRegistr4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eft"
            android:layout_below="@+id/textViewRegistr3"
            android:layout_marginStart="10sp"

            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/edittextstyle"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="20sp"
            android:id="@+id/textViewRegistr7"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewRegistr6"
            android:layout_marginBottom="0dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/eft"
            android:background="@drawable/krygkracniy"
            android:layout_centerHorizontal="true"
            android:text="ЗАРЕГИСТРИРОВАТЬСЯ" />

        <TextView
            android:layout_marginTop="10sp"
            android:id="@+id/textViewRegistr2"
            android:layout_below="@+id/textViewRegistr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginLeft="5sp"
            android:textColor="@color/black"
            android:fontFamily="@font/eft"
            android:text="Для начала давайте создадим аккаунт" />
        <TextView
            android:layout_marginTop="10sp"
            android:id="@+id/textViewRegistrfix"
            android:layout_below="@+id/textViewRegistr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:textSize="24sp"
            android:fontFamily="@font/eft"
            android:layout_marginLeft="5sp"
            android:textColor="@color/black"
            android:text="Введите ваше имя" />

        <EditText
            android:id="@+id/textViewRegistrfix2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewRegistrfix"
            android:background="@drawable/edittextstyle"
            android:layout_marginStart="10sp"

            android:layout_marginEnd="10sp"
            android:fontFamily="@font/eft"
            android:layout_marginBottom="5sp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:id="@+id/textViewRegistr3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginLeft="5sp"
            android:textColor="@color/black"
            android:fontFamily="@font/eft"
            android:text="Введите ваш email"
            android:layout_below="@+id/textViewRegistrfix2"
                    />
        <EditText
            android:id="@+id/textViewRegistr6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eft"
            android:layout_below="@+id/textViewRegistr5"
            android:background="@drawable/edittextstyle"
            android:layout_marginStart="10sp"

            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5sp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="24sp" />




</RelativeLayout>