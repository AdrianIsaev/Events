<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5sp"
    tools:context=".presentation.fragments.notification">


    <TextView
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:id="@+id/textViewnoviyparol"

        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/eft"
        android:textColor="@color/black"
        android:text="Получение уведомлений о грядущих мероприятиях:"
        />

    <TextView
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:id="@+id/textViewnoviyparol3"
        android:layout_below="@+id/textViewnoviyparol"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/eft"
        android:textColor="@color/black"
        android:text="Занесение информации о событиях в локальный календарь:"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/textViewyved1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bell"
        android:text="OFF"
        android:fontFamily="@font/eft"
        android:textColor="@color/white"
        android:textSize="24sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/textViewyved2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textViewyved1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/eft"
        android:background="@drawable/calendar_edit_outline"
        android:text="OFF"
        android:textColor="@color/jove"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>
</RelativeLayout>